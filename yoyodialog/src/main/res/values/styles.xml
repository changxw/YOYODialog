<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" mce_bogus="1" parent="android:Animation">
    <!--边框-->
    <item name="android:windowFrame">@null</item>
    <!--是否浮现在activity之上-->
    <item name="android:windowIsFloating">true</item>
    <!--半透明-->
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowFullscreen">false</item>
    <!--无标题-->
    <item name="android:windowNoTitle">true</item>
    <!--提示框背景（透明）-->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!--模糊-->
    <item name="android:backgroundDimEnabled">true</item>

</style>

    <style name="BottomDialog" mce_bogus="1" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_exit</item>
    </style>

    <style name="CenterDialog" mce_bogus="1" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_center_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_center_exit</item>
    </style>

    <style name="TopDialog" mce_bogus="1" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_top_exit</item>
    </style>

    <style name="RightDialog" mce_bogus="1" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_right_exit</item>
    </style>

    <style name="LeftDialog" mce_bogus="1" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_left_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_left_exit</item>
    </style>
</resources>